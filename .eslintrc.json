{
  "root": true,
  // This tells ESLint to load the config from the package `eslint-config-custom`
  "extends": ["custom"],
  "settings": {
    "next": {
      "rootDir": ["apps/*/"]
    }
  },
  "rules": {
    "react-hooks/exhaustive-deps": "warn",
    "react/jsx-key": "warn",
    "turbo/no-undeclared-env-vars": "warn",
    "react/display-name": "warn"
  }
}
